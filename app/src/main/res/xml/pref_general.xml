<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="pref_sensitivity"
        android:title="@string/sensitivity"
        android:defaultValue="12"
        android:inputType="number"
        android:digits="0123456789"
        android:summary="Minimum peak of the measurement of the sensor"/>

    <Preference
        android:key="pref_clear_scoreboard"
        android:title="Clear scoreboard"
        android:summary="Delete all measurements data"/>
</PreferenceScreen>
